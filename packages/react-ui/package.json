{
  "name": "@tool-pack/react-ui",
  "version": "0.0.10",
  "sideEffects": false,
  "scripts": {
    "rm:dist": "rimraf ./dist",
    "build": "npm run build:vite && npm run build:dts && npm run build:scss && npm run build:postcss",
    "build:vite": "vite build",
    "build:scss": "sass src/index.scss dist/index.css --no-source-map",
    "build:postcss": "postcss --config ./postcss.config.js dist/index.css -o dist/index.css",
    "check:ts": "tsc --noEmit -p tsconfig.json",
    "alias:debug": "tsc-alias -p tsconfig.json --debug",
    "build:dts": "tsc -p ./tsconfig.json --emitDeclarationOnly && tsc-alias -p ./tsconfig.json && rollup -c ./rollup.dts.config.js",
    "yalc:publish": "yalc publish",
    "pub": "npm publish"
  },
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "unpkg": "dist/index.iife.js",
  "jsdelivr": "dist/index.iife.js",
  "exports": {
    ".": {
      "import": {
        "node": "./dist/index.cjs.js",
        "default": "./dist/index.es.js"
      },
      "require": "./dist/index.cjs.js"
    },
    "./dist/*": "./dist/*"
  },
  "buildOptions": {
    "name": "ToolPackReactUI",
    "scss": true,
    "formats": [
      "esm-bundler",
      "esm-browser",
      "cjs",
      "global"
    ]
  },
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "dependencies": {
    "@tool-pack/types": "^0.2.0"
  },
  "devDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/js-tool-pack/react-ui.git"
  },
  "author": "DYH",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/js-tool-pack/react-ui/issues"
  },
  "homepage": "https://github.com/js-tool-pack/react-ui",
  "browserslist": [
    ">0.2%",
    "last 4 version",
    "not dead",
    "not op_mini all"
  ]
}
